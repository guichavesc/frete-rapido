{
  "compilerOptions": {
    "target": "ES2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "commonjs",

    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types", "./@types/*.d.ts"],
    "paths": {
      "*": ["./@types/*.d.ts"]
    }
  },
  "include": ["./src", "./@types"],
  "ts-node": {
    "files": true
  }
}
